<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <Button
        android:id="@+id/linear_essential"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear Essentials"></Button>

    <Button
        android:id="@+id/constraint_essential"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Constraint Essentials"></Button>

    <Button
        android:id="@+id/relative_essential"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative Essentials"></Button>

    <Button
        android:id="@+id/table_essential"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Essentials"></Button>

</LinearLayout>